<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="650.0" prefWidth="500.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.banco_central_nlogonia.RangoFechasController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label alignment="CENTER" prefHeight="53.0" prefWidth="438.0" text="------ Búsqueda de compras realizadas ------">
         <font>
            <Font name="Consolas" size="15.0" />
         </font>
      </Label>
      <VBox prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label alignment="CENTER" prefHeight="45.0" prefWidth="460.0" text="Por favor ingrese un rango de fecha para realizar la búsqueda" />
            <DatePicker fx:id="Fecha1_Busqueda_RF" prefHeight="60.0" prefWidth="470.0" />
            <Label />
            <DatePicker fx:id="Fecha2_Busqueda_RF" prefHeight="60.0" prefWidth="470.0" />
         </children>
      </VBox>
      <Pane prefHeight="55.0" prefWidth="460.0">
         <children>
            <Button fx:id="btn_Buscar_RF" layoutX="153.0" layoutY="13.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="154.0" text="Buscar" textAlignment="CENTER">
               <font>
                  <Font size="14.0" />
               </font>
               <effect>
                  <InnerShadow>
                     <color>
                        <Color red="0.5803921818733215" green="0.8392156958580017" blue="0.95686274766922" />
                     </color>
                  </InnerShadow>
               </effect>
            </Button>
         </children>
      </Pane>
      <TableView prefHeight="215.0" prefWidth="460.0">
        <columns>
          <TableColumn fx:id="ColDescripcion_RF" prefWidth="120" text="Descripción" />
          <TableColumn fx:id="ColFecha_RF" minWidth="0.0" prefWidth="115" text="Fecha" />
            <TableColumn fx:id="ColTarjeta_RF" prefWidth="115" text="Tarjeta" />
            <TableColumn fx:id="ColMonto_RF" prefWidth="115" text="Monto" />
        </columns>
      </TableView>
      <Label fx:id="MensajeError_RF" alignment="CENTER" contentDisplay="CENTER" prefHeight="19.0" prefWidth="460.0" textFill="#c71f1f">
         <font>
            <Font size="11.0" />
         </font>
      </Label>
   </children>
</VBox>
